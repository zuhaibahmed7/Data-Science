class AdultException(Exception):
    pass


class Person:
    def __init__(self, name, age):
        self.name = name
        self.age = age


    def display_person(self):
        print(f"person's name is {self.name} and {self.age}")


    def get_minor_age(self):
        if self.age>18:
            return self.age
        else:
            raise AdultException("Person is minor")


try:
    p1 = Person("Zuhaib Ahmed", 16)
    p1.display_person()
    print("Age ", p1.get_minor_age())
except AdultException as e:
    print("Exception: ", e)
